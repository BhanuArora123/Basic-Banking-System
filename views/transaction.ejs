<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="../public/index.css">

  <title>Home</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-primary text-light">
    <div class="container-fluid text-light">
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active text-light" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active text-light" aria-current="page" href="/viewAll">View All Customers</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <form class="w-100 d-flex flex-column justify-content-evenly align-items-center mt-5 formHeight" action="/transfer"
    method="POST">
    <div class="input-group mb-3 w-50 h-25 d-flex flex-column justify-content-evenly align-items-start">
      <label class="fw-bold fs-5" for="money">Money To Be Sent :</label>
      <input type="number" class=" ps-2 w-100 moneyInput" id="money" placeholder="Money To Be Sent"
        aria-label="Recipient's username" aria-describedby="button-addon2" name="moneyToBeSent">
    </div>
    <div class="container w-50 p-0 h-25 d-flex justify-content-evenly flex-column align-items-start">
      <label class="fw-bold fs-5" for="sentTo">Sent To :</label>
      <select class="form-select w-100" id="sentTo" aria-label="Default select example" name="sentTo">
        <% users.forEach((element)=> { %>
          <option value="<%= element._id %>">
            <%= element.name %>(<%= element.email %>)
          </option>
          <% }) %>
      </select>
    </div>
    <input type="hidden" name="sentBy" value=<%= userId %>>
    <button class="btn btn-outline-secondary text-white fw-bold bg-primary" type="submit" id="button-addon2">Send
      Money</button>
  </form>
  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>

  <!-- Option 2: Separate Popper and Bootstrap JS -->
